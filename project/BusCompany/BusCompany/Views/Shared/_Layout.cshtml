<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css"
</head>
<body>
    <nav>
        <ul class="menu">
            <li> @Html.ActionLink("Главная", "Index", "Home")</li>
            @if (User.IsInRole("director"))
            {
                <li> @Html.ActionLink("Список пользователей", "UsersList", "Account")</li>
            }
            <li> @Html.ActionLink("Учетная запись", "WorkWithAccount", "Account")</li>
            <li> @Html.ActionLink("Автобусы", "BusesList", "Bus")</li>
            @if (User.IsInRole("driver"))
            {
                <li> @Html.ActionLink("Путевые листы", "WaybillsList", "Waybill")</li>
            }
            @if (User.IsInRole("logist") || User.IsInRole("director"))
            {
                <li> @Html.ActionLink("Заявки", "RequestsList", "Request")</li>

            }
            @if (User.IsInRole("director"))
            {
                <li> @Html.ActionLink("Регистрация водителя", "DriverAdd", "Account")</li>
                <li> @Html.ActionLink("Регистрация логиста", "LogistAdd", "Account")</li>
            }
        </ul>
    </nav>
    @RenderBody()
</body>
</html>
